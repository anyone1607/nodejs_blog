<div class="container-fluid h-100 d-flex align-items-center">
  <div class="w-50 h-100 d-flex flex-column" style="overflow: hidden;">
    <img src="" alt="" class="img-fluid" style="object-fit: contain; height: 100%;" />
  </div>

  <div class="w-50 h-100 d-flex flex-column justify-content-center align-items-center" style="background-color: #f5f5f5; padding: 20px;">
    <div class="w-100 d-flex flex-column" style="max-width: 500px;">
      <div class="w-100 d-flex flex-column">
        <input
          class="form-control my-4"
          type="email"
          placeholder="Email"
          style="border: none; border-bottom: 1px solid black; background-color: transparent;"
        />
        <input
          class="form-control my-4"
          type="password"
          placeholder="Password"
          style="border: none; border-bottom: 1px solid black; background-color: transparent;"
        />

        <div class="w-100 d-flex justify-content-between align-items-center">
          <div class="form-check d-flex align-items-center">
            <input type="checkbox" class="form-check-input" style="margin-right: 10px;" />
            <label class="form-check-label" style="font-size: 0.875rem;">Remember me for 30 days</label>
          </div>
          <p class="text-secondary" style="font-size: 0.875rem; font-weight: 500; cursor: pointer; text-decoration: underline;">
            Forgot Password ?
          </p>
        </div>

        <div class="w-100 d-flex flex-column">
          <button
            class="btn btn-dark my-2 font-weight-semibold"
            style="background-color: #060606; border-radius: 0.375rem; padding: 1rem; text-align: center;"
          >
            Login
          </button>
        </div>

        <div class="w-100 d-flex align-items-center justify-content-center position-relative py-2">
          <div class="w-100" style="height: 1px; background-color: black;"></div>
          <p class="text-secondary position-absolute" style="background-color: #f5f5f5; padding: 0 10px;">or</p>
        </div>

        <div
          class="btn btn-outline-dark my-2 font-weight-semibold d-flex align-items-center justify-content-center"
          style="border-radius: 0.375rem; padding: 1rem; text-align: center; cursor: pointer;"
        >
          <img src="" alt="" class="h-6 mr-2" style="height: 24px;" />
          Sign In With Google
        </div>
      </div>

      <div class="w-100 d-flex align-items-center justify-content-center">
        <p class="text-secondary" style="font-size: 0.875rem;">
          Don't have a account?
          <span class="font-weight-semibold" style="cursor: pointer; text-decoration: underline;">
            <a href="#">Sign up for free</a>
          </span>
        </p>
      </div>
    </div>
  </div>
</div>
