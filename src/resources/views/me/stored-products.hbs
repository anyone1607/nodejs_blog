<div class="mt-4">
  <h3 style="text-align: center;margin-top:20px;font-weight: lighter; font-family:cursive;">Tất cả sản phẩm</h3>
  {{!-- <a href="/me/trash/products">Thùng rác ({{deletedCount}})</a> --}}
  <a href="/me/trash/products"><button type="button" class="btn btn-primary">
      Thùng rác
      <span class="badge badge-light">{{deletedCount}}</span>
    </button></a>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Tên sản phẩm</th>
        <th scope="col">Hình ảnh</th>
        <th scope="col" colspan="2">Giá</th>
        {{! <th scope="col" colspan="2">Thời gian tạo</th> }}
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td><img
              src="{{this.image}}"
              alt="{{this.name}}"
              style="width:100px;height:100px;"
            /></td>
          <td>{{this.price}}</td>
          <td>
            <a
              href="/products/{{this._id}}/edit"
              class="btn btn-warning"
            >Update</a>
            <a
              href=""
              class="btn btn-danger"
              data-toggle="modal"
              data-target="#delete-product-modal"
              data-id="{{this._id}}"
            >Delete</a>
          </td>
        </tr>
      {{else}}
        <tr>
          <td style="text-align: center;" colspan="5">Bạn chưa có sản phẩm nào.<a
              href="/products/create"
            >Tạo sản phẩm</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>

</div>

{{! confirm delete course }}

<div id="delete-product-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xoá sản phẩm</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn muốn xoá sản phẩm này!!</p>
      </div>
      <div class="modal-footer">
        <button
          id="btn-delete-product"
          type="button"
          class="btn btn-danger"
        >Xoá</button>
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Huỷ</button>
      </div>
    </div>
  </div>
</div>

