{{> site }}
<div class="mt-4">
  <div class="row">
    <div class="col-5">
        <img src="{{cproduct.image}}" alt="{{cproduct.name}}" style="width: 100%;border-radius: 4%;"/>
    </div>

    <div class="col-7">      
      <h1 style="font-family: 'Times New Roman', Times, serif;font-weight: bold; color: #ffb0bd;">{{cproduct.name}}</h1>
      {{!-- <p style="font-family: 'Times New Roman', Times, serif; font-size: 1.5rem; font-weight: bold; color: black;">{{cproduct.description}}</p> --}}
      <p style="font-family: 'Times New Roman', Times, serif; font-size: 1.5rem; font-weight: bold; color: black;color: #ffb0bd;">{{cproduct.price}}</p>
      <p style="font-family: 'Times New Roman', Times, serif; font-size: 1.5rem; font-weight: bold; color: black;color: #ffb0bd;">{{cproduct.combo}}</p>
      <div class="dropdown-divider"></div> 
        {{> ship}}
    </div>
  </div>

  <div class="row">
    <div class="col-8">
    <h4 style="font-weight: lighter; font-family:cursive;">Mô tả sản phẩm</h4>
    <p id="productDescription">{{cproduct.description}}</p>
  </div>
  <div class="col-4 mt-4 mb-4">
    <img src="{{cproduct.image1}}" style="width: 100%;height: auto;margin-bottom: 8px;border-radius: 5%;">
    <img src="{{cproduct.image2}}" style="width: 100%;height: auto;margin-bottom: 8px;border-radius: 5%;">
    <img src="{{cproduct.image3}}" style="width: 100%;height: auto;margin-bottom: 8px;border-radius: 5%;">
    <img src="{{cproduct.image4}}" style="width: 100%;height: auto;margin-bottom: 8px;border-radius: 5%;">
  </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
  var productDescription = document.getElementById("productDescription");
  var productText = productDescription.textContent;
  var newText = productText.replace(/ - | \+ /g, "<br><br>$&");
  productDescription.innerHTML = newText;
});

</script>
