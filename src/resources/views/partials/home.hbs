{{> site }}
<div class="mt-4 mb-4">
  <div class="row" style="display: flex; flex-wrap: wrap">
    {{#each cproducts}}
    <div class="col-sm-6 col-lg-4" style="display: flex; flex-wrap: wrap">
      <div
          class="card"
          style="display: flex; flex-direction: column; flex: 1; margin-bottom: 20px;"
        >
          <a href="/{{this.slug}}">
            <img
              style="height: 350px; object-fit: cover; width: 100%; "
              src="{{this.image}}"
              class="card-img-top"
              alt="{{this.name}}"
            />
          </a>
          <div
            class="card-body"
            style="display: flex; flex-direction: column; flex: 1;"
          >
            <a href="/{{this.slug}}" style="text-decoration: none;">
              <h5 class="card-title" style="color: #ffb0bd">{{this.name}}</h5>
            </a>
            <p
              class="card-text"
              style="flex: 1; font-family: 'Times New Roman', Times, serif; font-size: 1.5rem; font-weight: bold; color: black;"
            >{{this.price}}</p>
            <ul class="list-group list-group-flush">
             <li class="list-group-item">{{this.combo}}</li>
            </ul>
            <a href="/{{this.slug}}" class="btn btn-outline-info">Chi tiết sản phẩm</a>
          </div>
        </div>
    </div>
 {{/each}}
  </div>
</div>